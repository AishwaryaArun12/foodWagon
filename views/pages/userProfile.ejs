                                        <input type="text" class="form-control" value="<%=Object.values(userData.address[i])[1]%>" id="houseName" name="houseName" required>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="lMark">Land mark</label>
                                        <input type="text" class="form-control" id="lMark" name="lMark" required value="<%=Object.values(userData.address[i])[2]%>">
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="mobile">Mobile</label>
                                        <input type="number" class="form-control" id="mobile" name="mobile" required value="<%=Object.values(userData.address[i])[3]%>">
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="pin">Zip code</label>
                                        <input type="number" class="form-control" id="pin" name="pin" required value="<%=Object.values(userData.address[i])[4]%>">
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="dist">District</label>
                                        <input type="text" class="form-control" id="dist" name="dist" required value="<%=Object.values(userData.address[i])[5]%>">
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="state">State</label>
                                        <input type="text" class="form-control" id="state" name="state" required value="<%=Object.values(userData.address[i])[6]%>">
                                    </div>
                                </div>
                                <!-- Add more form fields for other details -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary"  >Save Changes</button>
                                </div>
                            <!-- Add more form fields for other details -->
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
                           </div>
       <%}%>      
    </div>            
                    <!-- Add more user details here -->
                </div>
                <div class="card-footer">
                    <button class="btn btn-warning" data-toggle="modal" data-target="#editProfileModal"><i class="fa fa-pencil-square-o fs-3" aria-hidden="true"></i> Profile</button>
                    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editModalLabel">Edit Profile</h5>
                                    
                                </div>
                                <div class="modal-body">
                                    <!-- Edit form fields go here -->
                                    
                                        <form id="editForm" method="post" action="/users/editProfile">
