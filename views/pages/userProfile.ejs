<%- include('../partials/header') %>
<div class="container ">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="container-fluid shadow-lg p-3 mb-3 m-3 rounded bg-transparent">
                <div class="card-header">
                    <h2>User Profile</h2>
                </div>
                <div class="d-flex justify-content-center">
                    <form action="/users/upload_profileImage" method="post" id="formImage" enctype="multipart/form-data">
                        <div id="profile-photo-container" class="m-4">
