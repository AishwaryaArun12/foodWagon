                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-warning" href="/users/cart">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                    <a class="btn btn-warning" href="/users/wishlist"><i class="fa fa-heart text-danger" aria-hidden="true"></i></a>
                    <a class="btn btn-warning" href="/users/orders"><b>Orders</b></a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->

<div class="modal fade" id="addAddressModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Add Address</h5>
                
            </div>
            <div class="modal-body">
                <!-- Edit form fields go here -->
                <form id="addAddressForm" method="post" action="/users/addAddress">
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="form-group col-6">
                            <label for="name">House name:</label>
                            <input type="text" class="form-control" id="houseName" name="houseName" required>
                        </div>
                        <div class="form-group col-6">
                            <label for="lMark">Land mark</label>
                            <input type="text" class="form-control" id="lMark" name="lMark" >
                        </div>
                        <div class="form-group col-6">
                            <label for="mobile">Mobile</label>
                            <input type="tel" class="form-control" id="mobile" pattern="^\d{10}$"  name="mobile"  required>
                        </div>
                        <div class="form-group col-6">
                            <label for="pin">Zip code</label>
                            <input type="number" class="form-control" id="pin" pattern="^[1-9]\d{5}$" name="pin" required>
                        </div>
                        <div class="form-group col-6">
                            <label for="dist">District</label>
                            <input type="text" class="form-control" id="dist" name="dist" >
                        </div>
                        <div class="form-group col-6">
                            <label for="state">State</label>
                            <input type="text" class="form-control" id="state" name="state" >
                        </div>
                    </div>
                    <!-- Add more form fields for other details -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary"  id="saveButton">Save</button>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>
<script>
    const profilePhoto = document.getElementById('profile-photo');
const photoUpload = document.getElementById('photo-upload');

// Add an event listener to the file input
photoUpload.addEventListener('change',async function () {
  
  let form  =document.getElementById('formImage');
  
  form.submit();
});

     const copyButton = document.getElementById("copyBtn");
  const copyIcon = document.getElementById("copy");
  const copiedIcon = document.getElementById("copied");
  const referralCode = document.getElementById("referralCode").textContent.trim();
copiedIcon.style.display = 'none';
  copyButton.addEventListener("click", function() {
    const textArea = document.createElement("textarea");
    textArea.value = referralCode;
    document.body.appendChild(textArea);
    textArea.select();
    document.execCommand("copy");
    document.body.removeChild(textArea);

    // Toggle icons
    copyIcon.style.display = "none";
    copiedIcon.style.display = "inline";

    // Revert to the "copy" icon after 2 seconds
    setTimeout(function() {
      copyIcon.style.display = "block";
      copiedIcon.style.display = "none";
    }, 2000);

    // Alert can be removed if not needed
  });

    function addressDelete(i){
        Swal.fire({
  title: 'Do you want delete the address?',
  
  showCancelButton: true,
  confirmButtonText: 'Delete',
 
}).then((result) => {
  /* Read more about isConfirmed, isDenied below */
  if (result.isConfirmed) {
    Swal.fire('Deleted!', '', 'success')
    setTimeout(()=>{window.location.href = `/users/removeAddress/${i}`},2000)
    
  } else if (result.isDenied) {
    Swal.fire('Changes are not saved', '', 'info')
  }
})
    }
</script>
