<%- include('../partials/header') %>
<div class="container w-50 border-dark p-5 m-5 border boxed-page" id="loginForm">
    <form action="../users/resetPassword" method="post">
        <h1>Reset your password</h1>
        <% if(error){ %>
            <div class="container w-100 border border-dark mb-3" id="error">
              <div class="text-center">
                <h3><%=error%></h3>
              </div>
            <div class="text-center">
              <a class="btn btn-primary mb-2" href="users/reset">Ok</a>
            </div>
          </div>
            <%}%>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Reset Password</label>
          <input type="text" class="form-control" id="exampleInputEmail1" name="password" aria-describedby="emailHelp">
          
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Confirm Password</label>
          <input type="text" class="form-control" id="exampleInputEmail1" name="confirmPassword">
          <div id="emailHelp" class="form-text">Please confirm your password here.</div>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>
