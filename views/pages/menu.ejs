    <script>
        const cart = document.getElementById('cart-counter');
        let cn = '<%=users.cart.length%>'
        cn = parseInt(cn);
        let wn = '<%=users.wishlist.length%>'
                wn = parseInt(wn);
        async function wish(id,i){
            if('<%=login%>'){
                const btn = document.getElementById(i);
                const wishlist = document.getElementById('wishlist-counter');
                
                if(btn.classList.contains('text-danger')){
                    await fetch(`/users/removeWish/${id}`).then(res=>res.json()).then(res=>{
                    if(res.data == 'ok'){
                    btn.classList.remove('text-danger');
                    btn.classList.add('text-light');
                    wishlist.innerHTML = wn-1;
                    wn -=1;
                    }
                   }).catch(error=>{console.log(error);}) 
                }else{
                    await fetch(`/users/addWish/${id}`).then(res=>res.json()).then(res=>{
                    console.log(res);
                    if(res.data == 'ok'){
                    btn.classList.remove('text-light');
                    btn.classList.add('text-danger');
                    wishlist.innerHTML = wn+1;
                    wn +=1;
                    }
                   }).catch(error=>{console.log(error);}) 
                }
                
            
            }else{
                Swal.fire({    
            icon: 'warning',
            title: 'Please login first.',    
            timer: 1000,
            })
            }
        }
        async function search(){
            const search = document.getElementById('searchInput').value;
            console.log(search,'df');
           await fetch(`/menu/search/${search}`)
            window.location.href = '/menu'
        }
        var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].addEventListener("click", function() {
    /* Toggle between adding and removing the "active" class,
    to highlight the button that controls the panel */
    this.classList.toggle("active");

    /* Toggle between hiding and showing the active panel */
    var panel = this.nextElementSibling;
    if (panel.style.display === "block") {
      panel.style.display = "none";
    } else {
      panel.style.display = "block";
    }
  });
}
  async function addCart(id){
    await fetch(`/users/addcart/${id}`).then(res=>res.json()).then(data=>{ 
        if(data.data=='Product added to cart successfully'){
            Swal.fire({    
            icon: 'success',
            title: 'Product added to cart successfully',    
            timer: 1000,
            
            })
            cart.innerHTML = cn+1;
            cn +=1;
        }else if(data.data == 'Already added this product to cart.'){
            Swal.fire({    
            icon: 'warning',
            title: 'Already added this product to cart.',    
            timer: 1000,
            })
        }else if(data.error){
            Swal.fire({
              icon: 'info',
              title: 'Sorry',
              text: 'Out of stock',
            })
        }
    })
  }
    </script>
