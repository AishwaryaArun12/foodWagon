<input type="hidden" id="users" value="<%=users%>">
<input type="hidden" id="cartLength" <%if(users){%>value="<%=users.cart.length%>"<%}%>>
<input type="hidden" id="wishLength" <%if(users){%>value="<%=users.wishlist.length%>"<%}%> ">


    <script>    
        let flag = document.getElementById('users').value;
        let cn =0;
        let wn =0;
        const cart = document.getElementById('cart-counter');
        if(flag){
         cn = document.getElementById('cartLength').value; 
         cn = parseInt(cn)
         wn = document.getElementById('wishLength').value;
         wn = parseInt(wn);
        }

        async function wish(id,i){    
            if(flag){          
                const btn = document.getElementById(i);
                const wishlist = document.getElementById('wishlist-counter');               
                if(btn.classList.contains('text-danger')){
                    await fetch(`/users/removeWish/${id}`).then(res=>res.json()).then(res=>{
                    if(res.data == 'ok'){
                    btn.classList.remove('text-danger');
                    btn.classList.add('text-light');                  
                    wn = wn - 1;
                    wishlist.innerHTML = wn;
                    }
                   }).catch(error=>{console.log(error);}) 
                }else{
                    await fetch(`/users/addWish/${id}`).then(res=>res.json()).then(res=>{
                    console.log(res);
                    if(res.data == 'ok'){
                    btn.classList.remove('text-light');
                    btn.classList.add('text-danger');                   
                    wn = wn + 1;
                    wishlist.innerHTML = wn;
                    }
                   }).catch(error=>{console.log(error);}) 
                }
            }else{
                Swal.fire({    
            icon: 'warning',
            title: 'Please login first.',    
            timer: 1000,
            })
            }
        }
        async function search(){
            const search = document.getElementById('searchInput').value;
           await fetch(`/menu/search/${search}`)
            window.location.href = '/menu'
        }
        var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var panel = this.nextElementSibling;
    if (panel.style.display === "block") {
      panel.style.display = "none";
    } else {
      panel.style.display = "block";
    }
  });
}
  async function addCart(id){
    await fetch(`/users/addcart/${id}`).then(res=>{console.log(res,'sd'); return res.json()}).then(data=>{ 
        console.log(data);
        if(data.data=='Product added to cart successfully'){
            Swal.fire({    
            icon: 'success',
            title: 'Product added to cart successfully',    
            timer: 1000,           
            })
            cart.innerHTML = cn+1;
            cn =cn+1;
        }else if(data.data == 'Already added this product to cart.'){
            Swal.fire({    
            icon: 'warning',
            title: 'Already added this product to cart.',    
            timer: 1000,
            })
        }else if(data.error){
            Swal.fire({
              icon: 'info',
              title: 'Sorry',
              text: 'Out of stock',
            })
        }
    }).catch(error=>console.error(error))
  }
    </script>
